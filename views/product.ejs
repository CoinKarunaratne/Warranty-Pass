<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title> Warranty Pass</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/1aa54d3876.js" crossorigin="anonymous"></script>
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans&family=Inter:wght@400;800&display=swap" rel="stylesheet">
  <!-- CSS -->
  <link rel="stylesheet" href="css/productStyle.css">

</head>

<body>

  <div id="blur">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-md bg-transparent">
      <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand"> <img class="Logo" src="images/Logo Big.png" alt=""> </a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <!-- Nav bar Centered items Start-->
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <div class="namecard">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                  <path
                    d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                </svg>
                <div class="nameFloat">
                  <h3><b>Profile</b> </h3>
                  <h3>Welcome</h3>
                </div>
              </div>
            </li>
            <li class="nav-item">
              <form action="/logout" method="post">
                <button type="submit" class="btn btn-dark">Log out</button></a>
              </form>
            </li>
          </ul>

          <!-- Nav Bar Centered items Finish-->

        </div>
      </div>
    </nav>

    <!-- Nav Bar Finish -->

    <div class="container text-center">
      <div class="row align-items-start">
        <div class="col col1">
          <div class="glass" name="imageContainer">
            <img src="<%= imgURL %>" alt="No Image Found" onerror=this.src="images/noImage.jpg">
          </div>
          <div class="glass" name="timeContainer">
            <div class="timeRemaining">
              <h1>Your warranty expires in : </h1>
              <h1>
                <%= dateRemain %>
              </h1>
            </div>
            <div class="progress">
              <div class="progress-bar" role="progressbar" style="width : <%= percentage %>" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
        </div>
        <div class="col ">
          <div class="colSec">

            <% items.forEach(function(item){ %>

            <form action="/update" method="post">

              <div type="submit" class="glass container text-center" name="contentContainer">
                <div class="row align-items-start">
                  <div class="col">
                    <h2><b>Product Name :</b> <br><%= item.Name %></h2>
                    <h2><b>Retail Store :</b> <br><%= item.Store %></h2>
                  </div>
                  <div class="col">
                    <h2><b>Warranty expiry (US):</b> <br><%= item.End_Date %></h2>
                    <h2><b>Warranty period :</b> <br><%= item.Period %></h2>
                  </div>
                  <input type="hidden" name="username" value="<%= item.Name %>">
                  <input type="hidden" name="startDate" value="<%= item.Start_Date %>">
                  <input type="hidden" name="endDate" value="<%= item.End_Date %>">
                  <input type="hidden" name="imgURL" value="<%= item.Img_URL %>">
                  <div class="buttonDiv">
                    <button type="submit" onclick="this.form.submit()" class="btn editbtn btn-success" type="button" name="button" value="Selected">Select</button>
                    <button class="btn editbtn btn-secondary" name="button" type="submit" onclick="this.form.submit()" value="Download">Download Receipt</button>
                    <button class="btn editbtn btn-danger" onclick="this.form.submit()" type="submit" name="button" value="Delete">Delete</button>
                  </div>
                  <!-- <button id="editBtn"  class="btn editbtn btn-primary" type="button" name="button">Edit</button> -->
                </div>
              </div>

            </form>

            <%  }) %>

          </div>
          <button type="button" class="btn btn-lg addNew" name="button"><i class="fa-solid fa-circle-plus"></i> Add New </button>
        </div>
      </div>
    </div>
    </div>


  <!-- Add New Item -->

  <div class="newItem">
    <h4>Let's Submit</h4>
    <br>
    <form class="" action="/product" method="post" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label" for="name">Product name* :</label>
        <input type="text" id="name" class="form-control" placeholder="Product's Name" name="name" value="">
      </div>
      <div class="mb-3">
        <label class="form-label" for="name">Retail store :</label>
        <input type="text" class="form-control" placeholder="Store name" name="store" value="">
      </div>
      <div class="mb-3">
        <label class="form-label" for="name">Date of Purchase* :</label>
        <input type="date" id="date" class="form-control" name="date" value="">
      </div>
      <div class="mb-3">
        <label class="form-label" for="name">Warranty period* :</label>
        <select name="periods" class="form-select" aria-label="Default select example">
          <option value="Years" selected>Years</option>
          <option value="Months">Months</option>
          <option value="Days">Days</option>
        </select>
        <input type="number" min="0" id="period" class="form-control" placeholder="Period" name="warranty" value="">
      </div>
      <div class="mb-3">
        <label class="form-label" for="name">Image URL:</label>
        <input type="url" class="form-control" name="image" value="">
      </div>
      <div class="mb-3">
        <label class="form-label" for="name">Proof of purchase :</label>
        <input type="file" class="form-control" name="receipt" value="">
      </div>
      <button id="submit" class="btn addNew productSubmit" type="submit" name="button"> Submit </button>
      <button class="btn close" type="button" name="button"><b>X</b></button>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  <script src="product.js"> </script>

</body>

</html>
